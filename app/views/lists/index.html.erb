<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), <%= image_tag "cinema.jpg" %>;">

  <div class="container">
    <h1>Movie Watch List</h1>
    <p>Organize your favorite movies in lists!</p>
    <%#= link_to 'Add a new list', new_list_path %>
    <%= link_to 'Add a new list', new_list_path, class: "btn btn-primary"%>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-around">
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name , list_path(list) %>
    </div>
    <% end %>
  </div>
</div>
