<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://c4.wallpaperflare.com/wallpaper/418/48/974/movie-collage-wallpaper-preview.jpg');">
  <div class="container">
    <h1>
      <span id="banner-typed-text"></span>
    </h1>
    <p>Organize your favorite movies in lists!</p>
    <%#= link_to 'Add a new list', new_list_path %>
    <%= link_to 'Add a new list', new_list_path, class: "btn btn-info"%>
  </div>
</div>

<div class="container">
  <div class="row">
  <%# <div class="grid-container"> %>
    <% @lists.each do |list| %>
      <div class="col-lg">
    <%# <div class="grid-child"> %>
      <%# <div class="container mt-4"> %>
        <% if list.photo.attached? %>
          <div class="card-category" style = "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <%# <%= cl_image_path (list.photo.key), height: 300, width: 400, crop: :fill %>
            <%= link_to list.name , list_path(list), class: "text-link" %>
          </div>
        <% else %>
          <div class="card-category" style="background-color">
            <%= link_to list.name , list_path(list), class: "text-link" %>
          </div>
        <% end %>
      </div>
    <%# </div> %>
    <% end %>
  </div>
</div>
</div>
